<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".Mom">

    <ImageView
        android:id="@+id/woman"
        android:layout_width="356dp"
        android:layout_height="285dp"
        android:layout_marginTop="60dp"

        android:layout_marginEnd="16dp"
        android:src="@drawable/smile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="57dp"
        android:layout_height="62dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/invertphone"
        app:layout_constraintBottom_toTopOf="@+id/home"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/info"
        android:layout_width="57dp"
        android:layout_height="62dp"
        android:layout_marginTop="604dp"
        android:layout_marginEnd="320dp"
        android:src="@drawable/invertinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="57dp"
        android:layout_height="62dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="48dp"
        android:src="@drawable/inverthouse"
        app:layout_constraintBottom_toTopOf="@+id/info"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Address"
        android:layout_width="320dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/press2play"
        android:text="365 Homeview Ln Denton, TX 7XXXX"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/home"
        app:layout_constraintStart_toEndOf="@+id/home"
        app:layout_constraintTop_toTopOf="@+id/home"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/Number"
        android:layout_width="318dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:text="123-456-7890"
        android:fontFamily="@font/press2play"
        android:textColor="@color/white"
        android:gravity="center"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/phone"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toTopOf="@+id/phone"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Info"
        android:layout_width="313dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:text="Guardian Quick Info"
        app:layout_constraintBottom_toBottomOf="@+id/info"
        app:layout_constraintStart_toEndOf="@+id/info"
        app:layout_constraintTop_toTopOf="@+id/info"
        app:layout_constraintVertical_bias="1.0"
        android:textSize="15dp"
        android:gravity="center"
        android:fontFamily="@font/press2play"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/press2play"
        android:gravity="center"
        android:text="Mom"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/woman" />

    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="53dp"
        android:layout_height="41dp"
        android:layout_marginVertical="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="340dp"
        android:rotation="180"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:src="@drawable/back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"/>


</androidx.constraintlayout.widget.ConstraintLayout>