<?xml version="1.0" encoding="utf-8"?>

<!-- make sure to use relative layout tag for your layout screens!-->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4A672"
    tools:context=".MainActivity">

    <!--"welcome to" text-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Welcome to"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/pressstart2pregular"/>


    <ImageView
        android:id="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="130dp"
        android:scaleType="fitStart"
        android:src="@drawable/learning_kids_logo" />

    <!--"Learning " text-->
    <TextView
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learning"
        android:textColor="#000000"
        android:textSize="50sp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/pressstart2pregular"
        />

    <!--" Kids" text-->
    <TextView
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kids"
        android:textColor="#000000"
        android:textSize="50sp"
        android:layout_marginTop="590dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/pressstart2pregular"
        />

    <!-- login  button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:backgroundTint="#795548"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="680dp"
        android:fontFamily="@font/pressstart2pregular"
        android:paddingTop="20dp"/>

    <!-- signup Button -->
    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:backgroundTint="#795548"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="770dp"
        android:fontFamily="@font/pressstart2pregular"
        android:paddingTop="17dp"/>

</RelativeLayout>